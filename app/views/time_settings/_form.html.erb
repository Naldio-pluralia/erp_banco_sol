<%= simple_form_for(time_setting) do |f| %>
  <%= form_url_helpers(f)%>
  <div id="time_setting-modal-form" class="modal modal-fixed-footer">
    <div class="modal-content">
      <span class="h5-size"> <%= time_setting.new_record? ? view_t('.new_x', x: view_t('.time_setting')) : view_t('.edit_x', x: view_t('.time_setting')) %> </span>
      <hr>

      <div class="flex-row flex-top">
        <%= f.input :number_of_months_to_enjoy_vacation, wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: 'defalt-selectize'} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), time_setting.cancel_url || time_settings_path, class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
