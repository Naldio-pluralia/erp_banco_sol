<%= index_bar(itens: {t(".salary_boards") => nil }) do %>
  <%= action_btn(content: t('add'), href: new_salary_board_path) %>
  <% action_btn(content: t('add'), href: "#salary_board-modal-form", modal_trigger: true) %>
  <%#= action_btn(content: t('filter'), href: "#filter-salary_boards-modal", modal_trigger: true, color: :blue) %>
<% end %>


<%= l_table do %>
  <%= t_header do %>
    <%= h_cell(text: t(".status") )%>
    <%= h_cell(sortable: false) %>
  <% end %>

  <%= t_body(elements: @salary_boards) do |e| %>
    <%= b_row(link_to: salary_board_path(e)) do %>
      <%= b_cell(element: e.status)%>
      <%= b_cell(text: "") do %>
        <%= link_to t('show'), e %> | 
        <%= link_to t('edit'), edit_salary_board_path(e) %> | 
        <%= link_to t('destroy'), e, method: :delete, data: { confirm: t('are_you_sure') } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= filter_modal(salary_boards_url, "salary_boards") do %>
    <div class="flex-row">
      <div class="flex-col-xs-12 flex-col-sm-3">

      </div>
    </div>
<% end %>

