<%= index_bar(itens: {t('.latest_salary_board') => nil}) do %>
    <%= action_btn(content: t('edit'),            href: edit_salary_board_url(@salary_board)) if !@salary_board.new_record? && can?(:update, @salary_board)%>
    <%= action_btn(content: t('add'),            href: new_salary_board_url) if @salary_board.new_record? && can?(:create, @salary_board)%>
<% end %>

<%= render 'latest', salary_board: @salary_board%>

