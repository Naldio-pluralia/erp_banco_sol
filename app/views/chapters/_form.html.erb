<%= simple_form_for(chapter) do |f| %>
  <%= form_url_helpers(f)%>
  <div id="chapter-modal-form" class="modal modal-fixed-footer">
    <div class="modal-content">
      <span class="h5-size"> <%= chapter.new_record? ? 'Novo Capítulo' : 'Editar Capítulo' %> </span>
      <hr>

      <div class="flex-row flex-top">
        <%= f.input :number, wrapper_html: {class: 'flex-col-xs-6'}, input_html: {class: ''} %>
        <%= f.input :name, wrapper_html: {class: 'flex-col-xs-6'}, input_html: {class: ''} %>
        <%= f.association :course, as: :hidden, wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: ''} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), chapter.cancel_url || chapters_path, class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
