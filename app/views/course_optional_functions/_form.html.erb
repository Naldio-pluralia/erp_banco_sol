<%= simple_form_for(course_optional_function) do |f| %>
  <%= form_url_helpers(f)%>
  <div id="course_optional_function-modal-form" class="modal modal-fixed-footer">
    <div class="modal-content">
      <span class="h5-size"> <%= course_optional_function.new_record? ? view_t('.new_x', x: view_t('.course_optional_function')) : view_t('.edit_x', x: view_t('.course_optional_function')) %> </span>
      <hr>

      <div class="flex-row flex-top">
        <%= f.association :course, wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: ''} %>
        <%= f.association :function, wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: ''} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), course_optional_function.cancel_url || course_optional_functions_path, class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
