<%= simple_form_for(absence_day) do |f| %>
  <%= form_url_helpers(f)%>
  <div id="absence_day-modal-form" class="modal modal-fixed-footer">
    <div class="modal-content">
      <span class="h5-size"> <%= absence_day.new_record? ? view_t('.new_x', x: view_t('.absence_day')) : view_t('.edit_x', x: view_t('.absence_day')) %> </span>
      <hr>

      <div class="flex-row flex-top">
        <%= f.association :employee_absence, wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: ''} %>
        <%= f.input :date, wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: ''} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), absence_day.cancel_url || absence_days_path, class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
