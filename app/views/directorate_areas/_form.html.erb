<%= simple_form_for(directorate_area) do |f| %>
  <%= form_url_helpers(f)%>
  <div id="directorate_area-modal-form" class="modal">
    <div class="modal-content">
      <span class="h5-size"> <%= directorate_area.new_record? ? "Criar Direcções" : "Actualizar Direcções" %> </span>
      <hr>

      <div class="flex-row flex-top">
        <%= f.input :name, wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: ''} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), directorate_area.cancel_url || directorate_areas_path, class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
