<%= simple_form_for(function_area) do |f| %>
  <%= form_url_helpers(f)%>
  <div id="function_area-modal-form" class="modal">
    <div class="modal-content">
      <span class="h5-size"> <%= function_area.new_record? ? 'Adicionar Área' : 'Actualizar Área' %> </span>
      <hr>

      <div class="flex-row flex-top">
        <%= f.input :name, wrapper_html: {class: 'flex-col-xs-12'}, input_html: {class: ''} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), function_area.cancel_url || function_areas_path, class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
