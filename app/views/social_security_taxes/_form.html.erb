<%= simple_form_for(social_security_tax) do |f| %>
  <div id="social_security_tax-modal-form" class="modal modal-fixed-footer">
    <div class="modal-content">
      <span class="h5-size"> <%= social_security_tax.new_record? ? t('.new') : t('.edit') %> </span>
      <hr>

      <div class="row">
        <%= f.input :name, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :abbr_name, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :percentage, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :percentage_from_employee, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :percentage_from_employer, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :status, collection: SubsidyTaxModel.enums_map_t(:status), include_blank: false, input_html: {class: 'default-selectize'}, wrapper_html: {class: 'flex-col-xs-3'} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), social_security_tax.new_record? ? latest_social_security_tax_url : social_security_tax_path(social_security_tax), class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
