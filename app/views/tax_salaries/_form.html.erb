<%= simple_form_for(tax_salary) do |f| %>
  <div id="tax_salary-modal-form" class="modal modal-fixed-footer">
    <div class="modal-content">
      <span class="h5-size"> <%= tax_salary.new_record? ? t('.new') : t('.edit') %> </span>
      <hr>

      <div class="row">
        <%= f.input :value, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.association :salary, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.association :tax_type, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), tax_salary.new_record? ? tax_salaries_path : tax_salary_path(tax_salary), class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
