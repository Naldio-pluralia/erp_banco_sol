<%= simple_form_for @department do |f| %>
  <div id="add-department" class="modal modal-fixed-footer">
    <div class="modal-content">
      <span class="h5-size"> <%= @department.id.present? ? 'edit_department'.ts : 'new_department'.ts %> </span>
      <hr>

      <div class="row">
        <%= f.input :name, label: t('department_name'), wrapper_html: { class: 'col m12 s12' } %>
        <%= f.association :employee, label: view_t('.department_lider'), wrapper_html: {class: 'col s12 m6'}, input_html: {class: 'default-selectize'}  %>
        <%= f.input :department_id, label: t('department_manager'), collection: Department.all.map{|v| [v.name, v.id]}, wrapper_html: { class: 'col m6 s12' }, input_html: {class: 'default-selectize'} %>
        <%= f.input :description, label: t('department_description'), wrapper_html: { class: 'col s12' } %>
      </div>

    </div>
    <div class="modal-footer">
      <%= f.button :submit, "#{@department.id.present? ? 'Actualizar' : 'Registar'}", class:"btn btn-default" %>
      <%= close_modal_btn %>
    </div>
  </div>
<% end %>
