<%= simple_form_for(salary_board_item) do |f| %>
  <div id="salary_board_item-modal-form" class="-modal -modal-fixed-footer">
    <div class="-modal-content">
      <span class="h5-size"> <%= salary_board_item.new_record? ? t('.new') : t('.edit') %> </span>
      <hr>

      <div class="row">
        <%= f.input :paygrade, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :base_value, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :increment_value, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :a_value, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :b_value, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :c_value, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :d_value, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.association :salary_board, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), salary_board_item.new_record? ? salary_board_items_path : salary_board_item_path(salary_board_item), class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
