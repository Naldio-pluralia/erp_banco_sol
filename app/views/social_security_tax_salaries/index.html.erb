<%= index_bar(itens: {t(".social_security_tax_salaries") => nil }) do %>
  <%= action_btn(content: t('add'), href: new_social_security_tax_salary_path) %>
  <% action_btn(content: t('add'), href: "social_security_tax_salary-modal-form", modal_trigger: true) %>
  <%#= action_btn(content: t('filter'), href: "#filter-social_security_tax_salaries-modal", modal_trigger: true, color: :blue) %>
<% end %>


<%= l_table do %>
  <%= t_header do %>
    <%= h_cell(text: t(".name") )%>
    <%= h_cell(text: t(".abbr_name") )%>
    <%= h_cell(text: t(".value") )%>
    <%= h_cell(text: t(".salary") )%>
    <%= h_cell(text: t(".social_security_tax") )%>
    <%= h_cell(sortable: false) %>
  <% end %>

  <%= t_body(elements: @social_security_tax_salaries) do |e| %>
    <%= b_row(link_to: social_security_tax_salary_path(e)) do %>
      <%= b_cell(element: e.name)%>
      <%= b_cell(element: e.abbr_name)%>
      <%= b_cell(element: e.value)%>
      <%= b_cell(element: e.salary)%>
      <%= b_cell(element: e.social_security_tax)%>
      <%= b_cell(text: "") do %>
        <%= link_to t('show'), e %> | 
        <%= link_to t('edit'), edit_social_security_tax_salary_path(e) %> | 
        <%= link_to t('destroy'), e, method: :delete, data: { confirm: t('are_you_sure') } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= filter_modal(social_security_tax_salaries_url, "social_security_tax_salaries") do %>
    <div class="flex-row">
      <div class="flex-col-xs-12 flex-col-sm-3">

      </div>
    </div>
<% end %>

