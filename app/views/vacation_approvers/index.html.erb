<%= index_bar(itens: {view_t(".vacation_approvers") => nil }) do %>
  <%#= action_btn(content: view_t('add'), href: new_vacation_approver_path) %>
  <%= action_btn(content: view_t('add'), href: "#vacation_approver-modal-form", modal_trigger: true) %>
  <%#= action_btn(content: view_t('filter'), href: "#filter-vacation_approvers-modal", modal_trigger: true, color: :blue) %>
<% end %>


<%= l_table do %>
  <%= t_header do %>
    <%= h_cell(text: view_t(".employee") )%>
    <%= h_cell(sortable: false) %>
  <% end %>

  <%= t_body(elements: @vacation_approvers) do |e| %>
    <%= b_row(link_to: vacation_approver_path(e)) do %>
      <%= b_cell(element: e.employee.name)%>
      <%= b_cell(text: "") do %>
        <%= link_to t('destroy'), e, method: :delete, data: { confirm: t('are_you_sure') } if can?(:destroy, e) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= filter_modal(vacation_approvers_url, "vacation_approvers") do %>
    <div class="flex-row">
      <div class="flex-col-xs-12 flex-col-sm-3">

      </div>
    </div>
<% end %>

<%= render 'form', vacation_approver: @vacation_approver %>
