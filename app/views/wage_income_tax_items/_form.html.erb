<%= simple_form_for(wage_income_tax_item) do |f| %>
  <div id="wage_income_tax_item-modal-form" class="-modal -modal-fixed-footer">
    <div class="-modal-content">
      <span class="h5-size"> <%= wage_income_tax_item.new_record? ? t('.new') : t('.edit') %> </span>
      <hr>

      <div class="row">
        <%= f.association :wage_income_tax, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :from, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :to, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :fixed_portion, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :percentage_over_the_excess, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :excess_of, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
        <%= f.input :status, wrapper_html: {class: 'col s4'}, input_html: {class: ''} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), wage_income_tax_item.new_record? ? wage_income_tax_items_path : wage_income_tax_item_path(wage_income_tax_item), class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
