<%= simple_form_for(vacation_day) do |f| %>
  <%= form_url_helpers(f)%>
  <div id="vacation_day-modal-form" class="modal modal-fixed-footer">
    <div class="modal-content">
      <span class="h5-size"> <%= vacation_day.new_record? ? view_t('.new_x', x: view_t('.vacation_day')) : view_t('.edit_x', x: view_t('.vacation_day')) %> </span>
      <hr>

      <div class="flex-row flex-top">
        <%= f.association :employee_vacation, wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: ''} %>
        <%= f.association :employee_avaliable_vacation, wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: ''} %>
        <%= f.input :date, wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: ''} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), vacation_day.cancel_url || vacation_days_path, class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
