<%= simple_form_for(function_deslocation_regime) do |f| %>
  <%= form_url_helpers(f)%>
  <div id="function_deslocation_regime-modal-form" class="modal">
    <div class="modal-content">
      <span class="h5-size"> <%= function_deslocation_regime.new_record? ? 'Adicionar Regime de Deslocação' : 'Actualizar Regime de Deslocação' %> </span>
      <hr>

      <div class="flex-row flex-top">
        <%= f.input :name, wrapper_html: {class: 'flex-col-xs-12'}, input_html: {class: ''} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), function_deslocation_regime.cancel_url || function_deslocation_regimes_path, class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
