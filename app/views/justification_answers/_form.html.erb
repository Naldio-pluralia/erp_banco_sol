<%= simple_form_for([employee, employee_justification, justification_answer]) do |f| %>
  <%= form_url_helpers(f)%>
  <div id="justification_answer-modal-form" class="modal modal-fixed-footer">
    <div class="modal-content">
      <span class="h5-size"> <%= justification_answer.new_record? ? view_t('.new_x', x: view_t('.justification_answer')) : view_t('.edit_x', x: view_t('.justification_answer')) %> </span>
      <hr>

      <div class="flex-row flex-top">
        <%= f.association :employee_justification, as: :hidden %>
        <%= f.association :employee, as: :hidden %>
        <%= f.input :status, collection: JustificationAnswer.enums_map_t(:status), wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: ''} %>
        <%= f.input :kind, collection: JustificationAnswer.enums_map_t(:kind), wrapper_html: {class: 'flex-col-xs-4'}, input_html: {class: ''} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.button :submit %>
      <%= link_to t('cancel'), justification_answer.cancel_url || employee_employee_justification_justification_answers_url(employee, employee_justification), class: 'waves-effect waves-light btn btn-flat btn-cancel-form' %>
    </div>
  </div>
<% end %>
